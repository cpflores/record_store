<div class="row">

<div class="container">
  <%= form_tag records_path, :method => 'get' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], class: "form-control", label: false, placeholder: "Search by name of record..." %>
      <span class="input-group-btn">
        <%= submit_tag "Go!", class: "btn btn-default" %>
      </span> 
    </div>
  <% end %>
</div>

</br>
  <%= render @records %>

</div>