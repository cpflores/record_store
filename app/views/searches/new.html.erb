<h1 class="text-center">Advanced Search</h1>

<%= simple_form_for(@search, html: {class: "form-sigin"}) do |f| %>
  <%= f.input :name, label: false, placeholder: "Name", input_html: {class: "form-control"} %>
  <%= f.input :artist, label: false, placeholder: "Artist", input_html: {class: "form-control"} %>
  <%= f.input :year, label: false, placeholder: "Year", input_html: {class: "form-control"} %>
  <%= f.input :description, label: false, placeholder: "Description", input_html: {class: "form-control"} %>
  <br>
  <%= f.input :min_price, label: false, placeholder: "Min Price", input_html: {class: "form-control"} %>
  <%= f.input :max_price, label: false, placeholder: "Max Price", input_html: {class: "form-control"} %>

  <%= f.button :submit, class: "btn btn-primary btn-block" %>
<% end %>

<p><%= link_to "Back", records_path %></p>