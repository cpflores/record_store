<div class="row">
  <h1 class="text-center">Dashboard</div>
  <div class="col-md-4">
    <h3 class="text-center">My Records <%= link_to "Add Record", new_record_path, class: "btn btn-primary btn-sm" %></h3>
    <table class="table table-condensed table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Artist</th>
          <th>Available</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @records.each do |record| %>
          <tr>
            <td><%= link_to record.name, record_path(record) %></td>
            <td><%= record.artist %></td>
            <td><%= record.availability %></td>
            <td><%= link_to "Edit", edit_record_path(record) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4">
    <h3 class="text-center">Purchased</h3>
  </div>
  <div class="col-md-4">
    <h3 class="text-center">Sales</h3>
  </div>
</div>